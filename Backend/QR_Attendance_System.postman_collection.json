    {
      "name": "QR Code",
      "item": [
        {
          "name": "Generate QR Code",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const qrData = pm.response.json().qrData;",
                  "    pm.environment.set(\"qrData\", qrData);",
                  "    const qrImage = pm.response.json().qrImage;",
                  "    if (qrImage) {",
                  "        pm.visualizer.set(`",
                  "            <div style='text-align: center;'>",
                  "                <h3>Generated QR Code</h3>",
                  "                <img src='${qrImage}' style='max-width: 300px;' />",
                  "                <p>QR Data: ${qrData}</p>",
                  "            </div>",
                  "        `);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"organisation_uid\": \"COLLEGE123\",\n    \"roll_no\": \"2024001\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/qr/generate",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "qr", "generate"]
            }
          }
        },
        {
          "name": "Scan QR Code",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Ensure QR data is properly formatted as a JSON string",
                  "const qrData = pm.environment.get(\"qrData\");",
                  "pm.environment.set(\"formattedQrData\", qrData);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"qrData\": \"{{formattedQrData}}\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/qr/scan",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "qr", "scan"]
            }
          }
        },
